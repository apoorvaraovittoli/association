<p id="notice"><%= notice %></p>

<h1>Teachers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Uploded Document</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teachers.each do |teacher| %>
      <tr>
        <td><%= teacher.name %></td>
        <td><%= link_to "Download", teacher.avatar_url, :target => "blank" %></td>
        <td><%= link_to 'Show', teacher %></td>
        <td><%= link_to 'Edit', edit_teacher_path(teacher) %></td>
        <td><%= link_to 'Destroy', teacher, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Teacher', new_teacher_path %>


<h1>All Students with Teacher</h1>
<table>
  <tr>
    <th>Teacher Name</th>
    <th>Student Name</th>
    <th>Student Age</th>
    <th>Student Birthday</th>
    <th></th>
  </tr>

<% @teachers.each do |teacher| %>
<% teacher.students.each do |student| %>
  <tr>
    <td><%= teacher.name %></td>
     <td><%= link_to "Download", teacher.avatar_url, :target => "blank" %></td>
    <td><%= student.name %></td>
    <td><%= student.age %></td>
    <td><%= student.birthday.date_of_birth if student.birthday.present?  %></td>
    <td><%= link_to 'Edit', edit_teacher_student_path(teacher,student) %></td>
    <td></td>
  </tr>
  <% end %>
  <% end %>
</table>
<%= will_paginate @teachers %>

